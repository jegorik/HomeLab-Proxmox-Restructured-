# =============================================================================
# Nginx Proxy Manager LXC Container - Example Ansible Inventory
# =============================================================================
# This file is auto-generated by deploy.sh after Terraform apply.
# Copy this to inventory.yml and update with your container IP.

all:
  hosts:
    npm:
      ansible_host: 192.168.1.110
      ansible_user: ansible
      ansible_port: 22
      ansible_ssh_private_key_file: ~/.ssh/id_ed25519
      ansible_ssh_common_args: '-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
  
  vars:
    # NPM-specific variables can be set here
    nodejs_version: "22"
